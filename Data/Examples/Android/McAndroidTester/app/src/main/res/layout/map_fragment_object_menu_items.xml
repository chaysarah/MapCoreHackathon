<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/draw_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/img_line_item" />

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/draw_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/img_rectangle_item" />


    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/draw_ellipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/img_ellipse_item" />

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/draw_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/img_arrow_item" />

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/draw_arc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/img_arc_item" />

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/draw_poligon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/img_polygon_item" />

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/draw_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/img_picture_item" />

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/draw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/img_text_item" />

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/draw_lineExpansion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/img_line_expansion_item" />

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/draw_mesh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/img_mesh_item" />
</LinearLayout>