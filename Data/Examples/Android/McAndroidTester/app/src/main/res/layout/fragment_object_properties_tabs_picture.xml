<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elbit.mapcore.mcandroidtester.ui.objects.fragments.properties_tabs.ObjectPropertiesTabsPictureFragment">
    <FrameLayout
        android:id="@+id/pic_texture_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/object_properties_picture_save_bttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Picture Changes" />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Is Size Factor"
        android:id="@+id/picture_is_size_factor_cb"/>
<com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:netl_labelText="Width"
    android:id="@+id/picture_width"/>
    <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:netl_labelText="Height"
        android:id="@+id/picture_height"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Is Use Texture Geo Referencing"
        android:id="@+id/picture_is_use_texture_geo_referencing_cb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Texture:" />

        <Button
            android:id="@+id/obj_properties_picture_texture_bttn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Texture" />

        <CheckBox
            android:id="@+id/obj_properties_picture_texture_none_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="None" />
    </LinearLayout>
    <com.elbit.mapcore.mcandroidtester.utils.customviews.SelectColor
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/obj_properties_picture_texture_color"/>

    <ListView
        android:id="@+id/obj_properties_picture_texture_color_rect_align"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
