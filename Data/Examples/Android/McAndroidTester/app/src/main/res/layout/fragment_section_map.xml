<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw Line"
        android:layout_gravity="center_horizontal"
        android:id="@+id/section_map_draw_line_bttn"/>

    <com.elbit.mapcore.mcandroidtester.utils.customviews.SectionSeparator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:section_separator_text="Section Line Points" />

    <ListView
        android:id="@+id/section_map_points_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Section Map"
        android:layout_gravity="center_horizontal"
        android:id="@+id/section_map_create_bttn"/>

    <CheckBox
        android:id="@+id/section_map_height_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detectibility"
        android:visibility="gone"/>
</LinearLayout>