<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground"
    tools:context="com.elbit.mapcore.mcandroidtester.ui.map_actions.edit_mode_properties.EditModePropertiesGeneralTabFragment">

    <Button
        android:id="@+id/edit_mode_properties_general_save_bttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save changes" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <com.elbit.mapcore.mcandroidtester.utils.customviews.SectionSeparator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:section_separator_text="Any Map Type" />

            <CheckBox
                android:id="@+id/emp_general_auto_scroll_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Auto Scroll" />

            <CheckBox
                android:id="@+id/emp_general_discard_changes_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Discard changes" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_margin_size_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_labelText="Margin Size" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_rotate_picture_offset_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_labelText="Rotate Picture Offset" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_point_and_line_click_tolerance_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_labelText="Point And Line Click Tolerance" />

            <CheckBox
                android:id="@+id/emp_general_rectangle_resize_relative_to_center_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Rectangle resize relative to center" />

            <CheckBox
                android:id="@+id/emp_general_auto_suppress_sight_presentation_map_tiles_web_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Auto Suppress Sight Presentation Map Tiles Web Requests" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_last_exit_status_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_enable_mode="false"
                app:netl_labelText="Last exit status" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.SectionSeparator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:section_separator_text="Max Radius" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_max_radius_world_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_labelText="World coord system" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_max_radius_screen_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_labelText="Screen coord system" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_max_radius_image_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_labelText="Image coord system" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.SectionSeparatorEnd
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.elbit.mapcore.mcandroidtester.utils.customviews.SectionSeparator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:section_separator_text="Multi Point Item" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_max_num_of_points_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_labelText="Max num of item points" />

            <CheckBox
                android:id="@+id/emp_general_force_finish_on_max_points_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Force Finish On Max Points" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.SpinnerWithLabel
                android:id="@+id/emp_general_mouse_move_usage_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:swl_labelText="Mouse Move Usage" />

            <CheckBox
                android:id="@+id/emp_general_enable_edit_new_point_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Enable Adding New Points" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.SectionSeparatorEnd
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.elbit.mapcore.mcandroidtester.utils.customviews.SectionSeparator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:section_separator_text="3D Map Only" />

            <ListView
                android:id="@+id/emp_general_intersection_target_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_camera_min_pitch_range_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_labelText="camera min pitch range" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_camera_max_pitch_range_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_labelText="camera max pitch range" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.NumericEditTextLabel
                android:id="@+id/emp_general_utility_items_optional_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:netl_numeric_keyboard="true"
                app:netl_labelText="utility items optional screen size" />

            <CheckBox
                android:id="@+id/emp_general_use_local_axes_at_editing_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Use local axes at editing" />

            <CheckBox
                android:id="@+id/emp_general_keep_scale_ratio_along_different_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Keep scale ratio along different axes at editing" />

            <com.elbit.mapcore.mcandroidtester.utils.customviews.SectionSeparatorEnd
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/emp_general_key_step_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
