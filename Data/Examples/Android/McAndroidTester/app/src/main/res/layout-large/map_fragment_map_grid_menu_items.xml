<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/height_lines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Height Lines"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/utm_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="UTM GRID" />

    <TextView
        android:id="@+id/geo_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/utm_grid"
        android:text="GEO GRID"
        android:src="@drawable/img_zoom_in" />

    <TextView
        android:id="@+id/mgns_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/geo_grid"
        android:text="MGNS GRID"
         />

    <TextView
        android:id="@+id/nzmg_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/mgns_grid"
        android:text="NZMG GRID"
        />
</LinearLayout>