<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.elbit.mapcore.mcandroidtester.ui.map_actions.treeviews.layers_tabs.StaticObjectsMapLayerFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/static_objects_details_displaying_items_attached_apply_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply" />
        <CheckBox
            android:id="@+id/static_objects_details_displaying_items_attached_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Displaying Items Attached To Terrain" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/static_objects_details_displaying_dtm_visualization_apply_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply" />
        <CheckBox
            android:id="@+id/static_objects_details_displaying_dtm_visualization_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Displaying Dtm Visualization" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Viewports:"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.elbit.mapcore.mcandroidtester.utils.customviews.ViewportsList
            android:id="@+id/static_objects_details_viewports_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
</ScrollView>